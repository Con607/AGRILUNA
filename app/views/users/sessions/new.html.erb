

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">AW+</h1>

            </div>
            <h3>Welcome to AW+</h3>
            <p>
                Perfectamente diseñado y preparado para el control de invernaderos desde tu desktop, laptop, tablet o smartphone.
            </p>
            <p>Inicia Sesion.</p>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <form class="m-t" role="form" action="#">
                <div class="form-group">
                    <%= f.input :email, required: false, autofocus: true, class: "form-control", placeholder: "Correo electronico" %>
                </div>
                <div class="form-group">
                    <%= f.input :password, required: false, class: "form-control", placeholder: "Contraseña" %>
                    <%= f.input :remember_me, label: "Mantener sesion abierta", as: :boolean if devise_mapping.rememberable? %>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Iniciar</button>

                <% end %>

               <!-- <a href="#"><small>Forgot password?</small></a> -->
                <%= link_to new_password_path(resource_name) do %><small>Olvidaste tu contraseña?</small><% end %>
                <p class="text-muted text-center"><small>No estas registrado?</small></p>
                <!-- <a class="btn btn-sm btn-white btn-block" href="">Create an account</a> -->
                <%= link_to "Crear cuenta", new_registration_path(resource_name), class: "btn btn-sm btn-white btn-block" %>

              <!--  <%= render "devise/shared/links" %> -->
            </form>
            <p class="m-t"> <small>AbroWeb app framework base on Bootstrap 3 &copy; 2015</small> </p>
        </div>
    </div>



