<p id="notice"><%= notice %></p>

<h1>Environments</h1>

<div class="table-responsive">
  <table class="table table-hover dataTable table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody id="environments">
      <% @environments.each do |environment| %>
        <%= render "environment", :environment => environment %>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<div class="col-md-8">
  <%= link_to 'New Environment', new_environment_path, remote: true, id: 'new_environment_link' %>
</div>


<br>
<div class="col-md-5" id="div_new_environment_form">
  <%= simple_form_for(@environment, remote: true, html: { id: 'new_environment_from' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, id: 'new_environment_submit_button' %>
    </div>
  <% end %>

</div>
