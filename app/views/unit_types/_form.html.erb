<%= simple_form_for(@unit_type) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :abbreviation %>
    <%= f.input :value %>
    <%= f.input :metric_system %>
    <%= f.input :measure_type, collection: ['Volume', 'Weight', 'Distance', 'Temperature'] %>
    <%= f.input :base %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
