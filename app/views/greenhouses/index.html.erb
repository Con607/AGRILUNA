<h1>Listing greenhouses</h1>

<div class="table-responsive">
  <table class="table table-hover dataTable table-striped table-bordered">
    <thead>
      <tr>
        <th>Company</th>
        <th>Name</th>
        <th>Description</th>
        <th>Area</th>
        <th>Location</th>
        <th>Employees</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @greenhouses.each do |greenhouse| %>
        <tr>
          <td><%= greenhouse.company.name %></td>
          <td><%= greenhouse.name %></td>
          <td><%= greenhouse.description %></td>
          <td><%= greenhouse.area %></td>
          <td><%= greenhouse.location %></td>
          <td>
            <% greenhouse.employees.each do |employee| %>
              <%= employee.first_name %><br>
            <% end %>
          </td>
          <td><%= link_to 'Show', greenhouse %></td>
          <td><%= link_to 'Edit', edit_greenhouse_path(greenhouse) %></td>
          <td><%= link_to 'Destroy', greenhouse, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

