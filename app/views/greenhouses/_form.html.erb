<%= simple_form_for(@greenhouse) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :company, collection: current_user.companies, label_method: :name, value_method: :id %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :area, placeholder: 'Area of the greenhouse in m2' %>
    <%= f.input :location %>
    <%= f.association :employees, label_method: :first_name, value_method: :id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
