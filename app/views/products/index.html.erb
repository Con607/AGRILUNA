<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Product variety ids</th>
      <th>Product presentation ids</th>
      <th>Product quality ids</th>
      <th>Harvest ids</th>
      <th>Selection ids</th>
      <th>Sale ids</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="products">
    <% @products.each do |product| %>
      <%= render "product", :product => product %>
    <% end %>
  </tbody>
</table>

<br>

<div class="col-md-8">
  <%= link_to 'New Product', new_product_path, remote: true, id: 'new_product_link' %>
</div>


<br>
<div class="col-md-5" id="div_new_product_form">
  <%= simple_form_for(@product, remote: true, html: { id: 'new_product_from' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, id: 'new_product_submit_button' %>
    </div>
  <% end %>

</div>
