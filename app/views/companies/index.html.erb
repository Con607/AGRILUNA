<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table class="table table-hover dataTable table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Address</th>
      <th>Telephone</th>
      <th>Greenhouse ids</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody id="companies">
    <% @companies.each do |company| %>
      <%= render "company", :company => company %>
    <% end %>
  </tbody>
</table>

<br>

<div class="col-md-8">
  <%= link_to 'New Company', new_company_path, remote: true, id: 'new_company_link' %>
</div>


<br>
<div class="col-md-5" id="div_new_company_form">
  <%= simple_form_for(@company, remote: true, html: { id: 'new_company_from' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :address %>
      <%= f.input :telephone %>
      <%= f.input :greenhouse_ids %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, id: 'new_company_submit_button' %>
    </div>
  <% end %>

</div>
