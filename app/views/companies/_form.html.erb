<%= simple_form_for(@company) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :telephone %>
    <%= f.input :greenhouse_ids %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
