<tr id="company_<%= company.id %>">
        <td><%= company.name %></td>
        <td><%= company.description %></td>
        <td><%= company.address %></td>
        <td><%= company.telephone %></td>
        <td>
        	<% company.greenhouses.each do |greenhouse| %>
        	<%= greenhouse.name %><br>
        	<% end %>
        </td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Destroy', company, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
      </tr>