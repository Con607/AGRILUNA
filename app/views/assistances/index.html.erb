<h1>Listing assistances</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Pay_roll_item_id</th>
      <th>Employee</th>
      <th>Assistance date</th>
      <th>Assisted</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody id="assistances">
    <% @assistances.each do |assistance| %>
      <%= render "assistance", :assistance => assistance %>
    <% end %>
  </tbody>
</table>

<br>


<%= simple_form_for(@assistance, remote: true, html: { id: 'assistances_form' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= f.association :employee, label_method: :first_name, value_method: :id %>
    <%= f.input :assistance_date %>
    <%= f.input :assisted %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>



<%= link_to 'New Assistance', new_assistance_path, remote: true, id: "new_assistance_link" %>
