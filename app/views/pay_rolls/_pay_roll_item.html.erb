    <tr  id="pay_roll_item_<%= pay_roll_item.id %>">
            <td><%= pay_roll_item.employee.first_name %></td>
            <td>
              <% pay_roll_item.assistances.each do |assistance| %>
                <%= assistance.assistance_date.strftime('%a') %>
              <% end %>
            </td>
            <td><%= pay_roll_item.total_assistances %></td>
            <td class="alnright"><%= pay_roll_item.salary %></td>
            <td>
              <div class="pay_roll_item_discount_update" id="pay_roll_item_discounts_<%= pay_roll_item.id %>">
                <!-- discounts value -->
                <%= pay_roll_item.discounts %>
              </div>
            </td>
            <td>
              <div class="pay_roll_item_bonus_update" id="pay_roll_item_bonuses_<%= pay_roll_item.id %>">
                <!-- bonuses value -->
                <%= pay_roll_item.bonuses %>
              </div>
            </td>
            <td class="alnright"><div id="pay_roll_item_total_<%= pay_roll_item.id %>"><%= number_to_currency(pay_roll_item.total, precision: 2) %></div></td>
            <td>
              <div>
                <%= pay_roll_item.payed %>
              </div>
            </td>
            <td><%= link_to (t :edit), edit_pay_roll_item_path(pay_roll_item), id: "edit_pay_roll_item_link_#{pay_roll_item.id}", class: 'edit_pay_roll_item_link' %></td>
            <td><%= link_to (t :destroy), pay_roll_item, method: :delete, remote: true, data: { confirm: :are_you_sure } %></td>
          </tr>
