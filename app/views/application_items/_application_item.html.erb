

    <tr id="application_item_<%= application_item.id %>">
          <td><%= application_item.application_product.name %></td>
          <td><%= application_item.unit_type.name unless application_item.unit_type.nil? %></td>
          <td><%= application_item.quantity %></td>
          <td><%= application_item.h2o_quantity_liters %></td>
          <td><%= application_item.total_product_used %> <%= application_item.unit_type.abbreviation %>/L</td>
          <td><%= application_item.cost_per_unit %></td>
          <td><%= application_item.total_cost %></td>
          <td><%= link_to 'Destroy', application_item, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
        </tr>