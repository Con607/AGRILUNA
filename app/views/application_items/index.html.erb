<p id="notice"><%= notice %></p>

<h1>Listing Application Items</h1>

<table  class="table table-hover">
  <thead>
    <tr>
      <th>Application</th>
      <th>Application product</th>
      <th>Unit of measure</th>
      <th>Quantity</th>
      <th>H2o quantity liters</th>
      <th>Total product used</th>
      <th>Cost per unit</th>
      <th>Total cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @application_items.each do |application_item| %>
      <tr>
        <td><%= application_item.application_id %></td>
        <td><%= application_item.application_product_id %></td>
        <td><%= application_item.unit_of_measure %></td>
        <td><%= application_item.quantity %></td>
        <td><%= application_item.h2o_quantity_liters %></td>
        <td><%= application_item.total_product_used %></td>
        <td><%= application_item.cost_per_unit %></td>
        <td><%= application_item.total_cost %></td>
        <td><%= link_to 'Show', application_item %></td>
        <td><%= link_to 'Edit', edit_application_item_path(application_item) %></td>
        <td><%= link_to 'Destroy', application_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

