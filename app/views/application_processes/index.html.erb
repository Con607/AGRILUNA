<p id="notice"><%= notice %></p>

<h1>Listing Application Processes</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Application ids</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="application_processes">
    <% @application_processes.each do |application_process| %>
      <%= render "application_process", :application_process => application_process %>
    <% end %>
  </tbody>
</table>

<br>

<div id="div_application_processes_form">
  <%= simple_form_for(@application_process, remote: true, html: { id: 'application_process_form' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= f.input :name %>
      <%= f.input :description %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, id: 'new_application_process_submit_button' %>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'New Application process', new_application_process_path, remote: true, id: "new_application_process_link" %>
