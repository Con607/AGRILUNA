<p id="notice"><%= notice %></p>

<h1>Leachates</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Event date</th>
      <th>Greenhouse</th>
      <th>Ddt</th>
      <th>Ph nutritive solution</th>
      <th>Ce nutritive solution</th>
      <th>Dropper spending</th>
      <th>Ph leachate</th>
      <th>Ce leachate</th>
      <th>Irrigations</th>
      <th>Phenological stage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="leachates">
    <% @leachates.each do |leachate| %>
      <%= render "leachate", :leachate => leachate %>
    <% end %>
  </tbody>
</table>

<br>

<div class="col-md-8">
  <%= link_to 'New Leachate', new_leachate_path, remote: true, id: 'new_leachate_link' %>
</div>


<br>
<div class="col-md-5" id="div_new_leachate_form">
  <%= simple_form_for(@leachate, remote: true, html: { id: 'new_leachate_from' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="col-md-12">
        <div class="col-md-4">
          <%= f.input :event_date %>
        </div>
        <div class="col-md-4">
          <%= f.association :greenhouse %>
        </div>
        <div class="col-md-4">
          <%= f.association :phenological_stage %>
        </div>
      </div>
      <div class="col-md-12">
        <div class="col-md-4">
          <%= f.input :ddt %>
        </div>
        <div class="col-md-4">
          <%= f.input :ph_nutritive_solution %>
        </div>
        <div class="col-md-4">
          <%= f.input :ce_nutritive_solution %>
        </div>
      </div>
      <div class="col-md-12">
        <div class="col-md-4">
          <%= f.input :dropper_spending %>
        </div>
        <div class="col-md-4">
          <%= f.input :ph_leachate %>
        </div>
        <div class="col-md-4">
          <%= f.input :ce_leachate %>
        </div>
      </div>
      <div class="col-md-12">
        <div class="col-md-4">
          <%= f.input :irrigations %>
        </div>
        </div class="col-md-4">
          <div class="form-actions">
            <%= f.button :submit, id: 'new_leachate_submit_button' %>
          </div>
        </div>
    </div>
  <% end %>

</div>
