<p id="notice"><%= notice %></p>

<h1>Roles</h1>

<table class="table table-hover dataTable table-striped table-bordered">
  <thead>
    <tr>
      <th>Users</th>
      <th>Name</th>
      <th>Description</th>
      <th>Role permissions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="roles">
    <% @roles.each do |role| %>
      <%= render "role", :role => role %>
    <% end %>
  </tbody>
</table>

<br>

<div class="col-md-8">
  <%= link_to 'New Role', new_role_path, remote: true, id: 'new_role_link' %>
</div>


<br>
<div class="col-md-5" id="div_new_role_form">
  <%= simple_form_for(@role, remote: true, html: { id: 'new_role_from' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, id: 'new_role_submit_button' %>
    </div>
  <% end %>

</div>
