<%= simple_form_for(@role) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :company_id %>
    <%= f.input :user_ids %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :role_permission_ids %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
