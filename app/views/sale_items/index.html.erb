<p id="notice"><%= notice %></p>

<h1>Sale Items</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Sale</th>
      <th>Product quality</th>
      <th>Quantity</th>
      <th>Unit price</th>
      <th>Total price</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="sale_items">
    <% @sale_items.each do |sale_item| %>
      <%= render "sale_item", :sale_item => sale_item %>
    <% end %>
  </tbody>
</table>

<br>

<div class="col-md-8">
  <%= link_to 'New Sale Item', new_sale_item_path, remote: true, id: 'new_sale_item_link' %>
</div>


<br>
<div class="col-md-5" id="div_new_sale_item_form">
  <%= simple_form_for(@sale_item, remote: true, html: { id: 'new_sale_item_from' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :sale_id %>
      <%= f.input :product_quality_id %>
      <%= f.input :quantity %>
      <%= f.input :unit_price %>
      <%= f.input :total_price %>
      <%= f.input :status %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, id: 'new_sale_item_submit_button' %>
    </div>
  <% end %>

</div>
