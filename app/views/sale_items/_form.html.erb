<%= simple_form_for(@sale_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :sale_id %>
    <%= f.input :product_quality_id %>
    <%= f.input :quantity %>
    <%= f.input :unit_price %>
    <%= f.input :total_price %>
    <%= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
