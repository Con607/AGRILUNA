<p id="notice"><%= notice %></p>

<h1>User Roles</h1>

<table class="table table-hover dataTable table-striped table-bordered">
  <thead>
    <tr>
      <th>User</th>
      <th>Role</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody id="user_roles">
    <% @user_roles.each do |user_role| %>
      <%= render "user_role", :user_role => user_role %>
    <% end %>
  </tbody>
</table>

<br>

<div class="col-md-8">
  <%= link_to 'New User Role', new_user_role_path, remote: true, id: 'new_user_role_link' %>
</div>


<br>
<div class="col-md-5" id="div_new_user_role_form">
  <%= simple_form_for(@user_role, remote: true, html: { id: 'new_user_role_from' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.association :user, label_method: :full_name, value_method: :id %>
      <%= f.association :role, label_method: :name, value_method: :id %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, id: 'new_user_role_submit_button' %>
    </div>
  <% end %>

</div>
