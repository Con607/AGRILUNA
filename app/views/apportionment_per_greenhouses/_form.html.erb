<%= simple_form_for(@apportionment_per_greenhouse) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :event_date %>
    <%= f.input :administration_cost_id %>
    <%= f.input :greenhouse_id %>
    <%= f.input :percentage %>
    <%= f.input :amount %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
