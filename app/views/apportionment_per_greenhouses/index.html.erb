<p id="notice"><%= notice %></p>

<h1>Apportionment Per Greenhouses</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Event date</th>
      <th>Administration cost</th>
      <th>Greenhouse</th>
      <th>Percentage</th>
      <th>Amount</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody id="apportionment_per_greenhouses">
    <% @apportionment_per_greenhouses.each do |apportionment_per_greenhouse| %>
      <%= render "apportionment_per_greenhouse", :apportionment_per_greenhouse => apportionment_per_greenhouse %>
    <% end %>
  </tbody>
</table>

<br>

<div class="col-md-8">
  <%= link_to 'New Apportionment Per Greenhouse', new_apportionment_per_greenhouse_path, remote: true, id: 'new_apportionment_per_greenhouse_link' %>
</div>


<br>
<div class="col-md-5" id="div_new_apportionment_per_greenhouse_form">
  <%= simple_form_for(@apportionment_per_greenhouse, remote: true, html: { id: 'new_apportionment_per_greenhouse_from' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :event_date %>
      <%= f.input :administration_cost_id %>
      <%= f.input :greenhouse_id %>
      <%= f.input :percentage %>
      <%= f.input :amount %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, id: 'new_apportionment_per_greenhouse_submit_button' %>
    </div>
  <% end %>

</div>
