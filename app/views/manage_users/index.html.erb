<h1>Listing Users</h1>

<div class="table-responsive">
  <table class="table table-hover dataTable table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Roles</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.full_name %></td>
          <td><%= user.email %></td>
          <td>
            <% user.roles.each do |role| %>
              <%= role.name unless user.roles.nil? %><br>
            <% end %>
          </td>
          <td><%= link_to 'Edit', edit_user_path(id: user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

