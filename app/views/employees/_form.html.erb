<%= simple_form_for(@employee) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :second_name %>
    <%= f.input :last_name %>
    <%= f.input :second_last_name %>
    <%= f.input :salary %>
    <%= f.association :greenhouses, label_method: 'name', value_method: :id %>
    <%= f.association :job_position %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
