<%= simple_form_for(@cycle) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :greenhouse_id %>
    <%= f.input :name %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :estimated_performance_per_m2 %>
    <%= f.input :greenhouse_estimated_performance %>
    <%= f.input :maximum_estimated_production_cost %>
    <%= f.input :expected_average_selling_price_per_kg %>
    <%= f.input :expected_total_expenses %>
    <%= f.input :expected_total_profit %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
