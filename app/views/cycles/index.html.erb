<p id="notice"><%= notice %></p>

<h1>Cycles</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Greenhouse</th>
      <th>Name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Estimated performance per m2</th>
      <th>Greenhouse estimated performance</th>
      <th>Maximum estimated production cost</th>
      <th>Expected average selling price per kg</th>
      <th>Expected total expenses</th>
      <th>Expected total profit</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody id="cycles">
    <% @cycles.each do |cycle| %>
      <tr id="cycle_<% cycle.id %>">
        <td><%= cycle.greenhouse_id %></td>
        <td><%= cycle.name %></td>
        <td><%= cycle.start_date %></td>
        <td><%= cycle.end_date %></td>
        <td><%= cycle.estimated_performance_per_m2 %></td>
        <td><%= cycle.greenhouse_estimated_performance %></td>
        <td><%= cycle.maximum_estimated_production_cost %></td>
        <td><%= cycle.expected_average_selling_price_per_kg %></td>
        <td><%= cycle.expected_total_expenses %></td>
        <td><%= cycle.expected_total_profit %></td>
        <td><%= link_to 'Show', cycle %></td>
        <td><%= link_to 'Destroy', cycle, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="col-md-8">
  <%= link_to 'New Cycle', new_cycle_path, remote: true, id: 'new_cycle_link' %>
</div>


<br>
<div class="col-md-5" id="div_new_cycle_form">
  <%= simple_form_for(@cycle, remote: true, html: { id: 'new_cycle_from' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :greenhouse_id %>
      <%= f.input :name %>
      <%= f.input :start_date %>
      <%= f.input :end_date %>
      <%= f.input :estimated_performance_per_m2 %>
      <%= f.input :greenhouse_estimated_performance %>
      <%= f.input :maximum_estimated_production_cost %>
      <%= f.input :expected_average_selling_price_per_kg %>
      <%= f.input :expected_total_expenses %>
      <%= f.input :expected_total_profit %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, id: 'new_cycle_submit_button' %>
    </div>
  <% end %>

</div>
