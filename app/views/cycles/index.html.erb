<p id="notice"><%= notice %></p>

<h1>Cycles</h1>

<table class="table table-hover dataTable table-striped table-bordered">
  <thead>
    <tr>
      <th>Greenhouse</th>
      <th>Name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Active</th>
      <th>Estimated performance per m2</th>
      <th>Greenhouse estimated performance</th>
      <th>Maximum estimated production cost</th>
      <th>Expected average selling price per kg</th>
      <th>Expected total expenses</th>
      <th>Expected total profit</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody id="cycles">
    <% @cycles.each do |cycle| %>
      <%= render "cycle", :cycle => cycle %>
    <% end %>
  </tbody>
</table>

<br>

<div class="col-md-8">
  <%= link_to 'New Cycle', new_cycle_path, remote: true, id: 'new_cycle_link' %>
</div>


<br>
<div class="col-md-5" id="div_new_cycle_form">
  <%= simple_form_for(@cycle, remote: true, html: { id: 'new_cycle_from' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.association :greenhouse %>
      <%= f.input :name, placeholder: 'Ej. Verano 2015.  o   Enero - Julio 2015' %>
      <%= f.input :start_date %>
      <%= f.input :end_date %>
      <%= f.input :active %>
      <%= f.input :estimated_performance_per_m2 %>
      <%= f.input :maximum_estimated_production_cost %>
      <%= f.input :expected_average_selling_price_per_kg %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, id: 'new_cycle_submit_button' %>
    </div>
  <% end %>

</div>
