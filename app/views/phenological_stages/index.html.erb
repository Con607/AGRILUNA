<p id="notice"><%= notice %></p>

<h1>Phenological Stages</h1>

<div class="table-responsive">
  <table class="table table-hover dataTable table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Leachate ids</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody id="phenological_stages">
      <% @phenological_stages.each do |phenological_stage| %>
        <%= render "phenological_stage", :phenological_stage => phenological_stage %>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<div class="col-md-8">
  <%= link_to 'New Phenological Stage', new_phenological_stage_path, remote: true, id: 'new_phenological_stage_link' %>
</div>


<br>
<div class="col-md-5" id="div_new_phenological_stage_form">
  <%= simple_form_for(@phenological_stage, remote: true, html: { id: 'new_phenological_stage_from' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, id: 'new_phenological_stage_submit_button' %>
    </div>
  <% end %>

</div>
