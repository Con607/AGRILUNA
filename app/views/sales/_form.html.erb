<%= simple_form_for(@sale) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :event_date %>
    <%= f.association :product %>
    <%= f.association :product_variety %>
    <%= f.association :product_presentation %>
    <%= f.input :total_price %>
    <%= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
