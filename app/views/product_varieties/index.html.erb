<p id="notice"><%= notice %></p>

<h1>Product Varieties</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Harvest ids</th>
      <th>Selection ids</th>
      <th>Sale ids</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="product_varieties">
    <% @product_varieties.each do |product_variety| %>
      <%= render "product_variety", :product_variety => product_variety %>
    <% end %>
  </tbody>
</table>

<br>

<div class="col-md-8">
  <%= link_to 'New Product Variety', new_product_variety_path, remote: true, id: 'new_product_variety_link' %>
</div>


<br>
<div class="col-md-5" id="div_new_product_variety_form">
  <%= simple_form_for(@product_variety, remote: true, html: { id: 'new_product_variety_from' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.association :product %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, id: 'new_product_variety_submit_button' %>
    </div>
  <% end %>

</div>
