<p id="notice"><%= notice %></p>

<h1>Plans</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Company ids</th>
      <th>Greenhouse ids</th>
      <th>User ids</th>
      <th>Users allowed</th>
      <th>Companies allowed</th>
      <th>Greenhouses allowed</th>
      <th>Cost per month usd</th>
      <th>Billing</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody id="plans">
    <% @plans.each do |plan| %>
      <tr id="plan_<% plan.id %>">
        <td><%= plan.name %></td>
        <td><%= plan.company_ids %></td>
        <td><%= plan.greenhouse_ids %></td>
        <td><%= plan.user_ids %></td>
        <td><%= plan.users_allowed %></td>
        <td><%= plan.companies_allowed %></td>
        <td><%= plan.greenhouses_allowed %></td>
        <td><%= plan.cost_per_month_usd %></td>
        <td><%= plan.billing %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="col-md-8">
  <%= link_to 'New Plan', new_plan_path, remote: true, id: 'new_plan_link' %>
</div>


<br>
<div class="col-md-5" id="div_new_plan_form">
  <%= simple_form_for(@plan, remote: true, html: { id: 'new_plan_from' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :company_ids %>
      <%= f.input :greenhouse_ids %>
      <%= f.input :user_ids %>
      <%= f.input :users_allowed %>
      <%= f.input :companies_allowed %>
      <%= f.input :greenhouses_allowed %>
      <%= f.input :cost_per_month_usd %>
      <%= f.input :billing %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, id: 'new_plan_submit_button' %>
    </div>
  <% end %>

</div>
