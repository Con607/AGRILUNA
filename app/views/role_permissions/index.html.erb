<p id="notice"><%= notice %></p>

<h1>Role Permissions</h1>

<table class="table table-hover dataTable table-striped table-bordered">
  <thead>
    <tr>
      <th>Role</th>
      <th>Permision</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody id="role_permissions">
    <% @role_permissions.each do |role_permission| %>
      <%= render "role_permission", :role_permission => role_permission %>
    <% end %>
  </tbody>
</table>

<br>

<div class="col-md-8">
  <%= link_to 'New Role Permission', new_role_permission_path, remote: true, id: 'new_role_permission_link' %>
</div>


<br>
<div class="col-md-5" id="div_new_role_permission_form">
  <%= simple_form_for(@role_permission, remote: true, html: { id: 'new_role_permission_from' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.association :role %>
      <%= f.association :permission %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, id: 'new_role_permission_submit_button' %>
    </div>
  <% end %>

</div>
