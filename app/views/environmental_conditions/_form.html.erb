<%= simple_form_for(@environmental_condition) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :event_date, as: :datepicker, placeholder: 'select date', input_html: { class: 'datepicker' } %>
    <%= f.input :greenhouse_id %>
    <%= f.input :environment_id %>
    <%= f.input :max_temp %>
    <%= f.input :min_temp %>
    <%= f.input :max_rel_humidity %>
    <%= f.input :min_rel_humidity %>
    <%= f.input :weather_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
