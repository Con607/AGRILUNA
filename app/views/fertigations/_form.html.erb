<%= simple_form_for(@fertigation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :greenhouse %>
    <%= f.input :fertigation_datetime %>
    <%= f.input :tank %>
    <%= f.input :h2o_quantity %>
    <%= f.association :fertigation_items %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
